{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://pollar.up.railway.app/api/:path*" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
